<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd_2" >

    <LinearLayout
        android:id="@+id/ll_frag2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="可查看每日课程："
                    android:textSize="25sp"
                    android:textStyle="bold" 
                    android:gravity="right"/>

                <Spinner
                    android:id="@+id/today_frag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:spinnerMode="dialog"
                    android:layout_gravity="left"/>
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/trainning_frag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rightforward_2" />
        
        <TextView
            android:id="@+id/info_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_frag2"
            android:textSize="18sp"
            android:textStyle="bold" />
        
    </LinearLayout>

</ScrollView>